escape ^@a
startup_message off
defscrollback 10000
bind X remove

# navigating regions with Ctrl-arrows
hardstatus alwayslastline
hardstatus string '%= %{=kw}%?%-Lw%?%{b}(%{W}%n*%f%t%?(%u)%?%{b})%{w}%?%+Lw%?%?%= %{w}%S'

bind h focus left
bind j focus down
bind k focus up
bind l focus right

caption string "%{03} "
rendition so =00
term screen-256color
