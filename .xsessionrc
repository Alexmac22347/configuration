xinput --set-prop "TPPS/2 IBM TrackPoint" "Device Accel Constant Deceleration" .65 # increase trackpoint sensitivity
xinput --set-prop "SynPS/2 Synaptics TouchPad" "Synaptics Scrolling Distance" -200, -200 # reverse scrolling
xinput --set-prop "SynPS/2 Synaptics TouchPad" "Device Enabled" 0
setxkbmap -option ctrl:nocaps
xset r rate 240 40
xset b off
