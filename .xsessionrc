TOUCHPAD_ID=`xinput --list | grep "TouchPad" | grep '=[0-9]*' -o | cut -c 2-`
TRACKPOINT_ID=`xinput --list | grep "TrackPoint" | grep '=[0-9]*' -o | cut -c 2-`

xinput --set-prop $TRACKPOINT_ID 253 .65 # increase trackpoint sensitivity
xinput --set-prop $TOUCHPAD_ID 265 -111, -111 # reverse scrolling

setxkbmap -option ctrl:nocaps
xset r rate 240 40
