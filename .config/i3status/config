# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

order += "volume master"
order += "wireless _first_"
order += "battery all"
order += "cpu_usage"
order += "tztime local"

volume master {
        format = "vol: %volume"
        format_muted = "vol: %volume (mute)"
        device = "default" 
        mixer = "Master"
        mixer_idx = 0
}

wireless _first_ {
        format_up = "wifi: %essid (%quality)"
        format_down = "wifi: down"
}

battery all {
        format = "bat: %percentage %remaining"
        hide_seconds = true
        integer_battery_capacity = true
        status_BAT = ""
        status_UNK = ""
}

tztime local {
        format = "%Y-%m-%d %I:%M %p"
}

cpu_usage {
	format = "cpu: %usage"
}
